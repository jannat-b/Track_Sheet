 #include <iostream>
#include <iomanip>
#include <string>
#include <bits/stdc++.h>
#include <algorithm>
#include <cmath>
#define ll long long


using namespace std;



int main() {
int n;
cin>>n;
while(n--) {
  string s,ans;
  cin>>s;
  if(s.length() > 10) {
      ans=s[0];
      ans+=to_string((s.length()-2));
      ans+=s[s.length()-1];
  } else {
    ans = s;
  }
  cout<<ans<<'\n';
}

 return 0;
 }
